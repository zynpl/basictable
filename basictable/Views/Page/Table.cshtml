@using basictable.Models;
@model List<Exam>
@{
    ViewData["Title"] = "Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Table</h1>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>First Exam</th>
            <th>Second Exam</th>
            <th>Project</th>
            <th>Final</th>

            <th>Update</th>
            <th>Delete</th>



        </tr>
    </thead>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.name</td>
            <td>@x.surname</td>
            <td>@x.firstExam</td>
            <td>@x.secondExam</td>
            <td>@x.Project</td>
            <td>@x.final</td>
            <td><a href="/Page/tableShow/@x.id">Update</a></td>
            <td><a href="/Page/tDelete/@x.id">Delete</a></td>




        </tr>
    }
</table>

